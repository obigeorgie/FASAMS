{
    "functions": {
        "source": "functions"
    },
    "hosting": {
        "public": "fasams-validator/dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "ui": {
            "enabled": true
        }
    }
}